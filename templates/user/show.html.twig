{% extends 'base.html.twig' %}


{% block title %}
    {{ user.username }}'s Profile
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-header">
                <h2>Profile Information</h2>
            </div>
            <div class="card-body">
                <p><strong>Username:</strong> {{ user.username }}</p>
                <p><strong>Email:</strong> {{ user.email }}</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h3>Roles</h3>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    {% for role in user.roles %}
                        <li class="badge bg-primary me-2">{{ role }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Events Joined</h3>
            </div>
            <div class="card-body">
                {% if user.events|length > 0 %}
                    <div class="list-group">
                        {% for event in user.events %}
                            <a href="{{ path('event_show', {'id': event.id, title: event.title}) }}"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">{{ event.title }}</h5>
                                    <small>{{ event.datetimeStart|date('Y-m-d H:i') }}</small>
                                </div>
                                <p class="mb-1">{{ event.description|slice(0, 100) }}...</p>
                                <small>Category: {{ event.category.name }}</small>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">No events created yet.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}


