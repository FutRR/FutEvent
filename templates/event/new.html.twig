{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Edit
    {% else %}
        Create
    {% endif %}
    Event
{% endblock %}

{% block body %}

    {{ form_errors(eventForm) }}

    <div class="form-wrapper">

        <h1>
            {% if edit %}
                Edit
            {% else %}
                Create
            {% endif %}
            Event
        </h1>

        {{ form_start(eventForm) }}

        {{ form_row(eventForm.title) }}
        {{ form_row(eventForm.description) }}
        {{ form_row(eventForm.image) }}
        {{ form_row(eventForm.datetime_start) }}
        {{ form_row(eventForm.datetime_end) }}
        {{ form_row(eventForm.category) }}

        <input type="submit" class="btn" value="{% if edit %}Edit{% else %}Create{% endif %}">
        {{ form_end(eventForm) }}
    </div>
{% endblock %}
